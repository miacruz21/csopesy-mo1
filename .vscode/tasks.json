{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++",
      "type": "shell",
      "command": "C:/mingw64/bin/g++.exe",
      "args": [
          "-std=c++17",
          "-g",
          "-Isrc",
          "src/main.cpp",
          "src/cli/console.cpp",
          "src/core/config_manager.cpp",
          "src/core/cpu_utilization.cpp",
          "src/core/instruction.cpp",
          "src/core/process.cpp",
          "src/core/process_manager.cpp",
          "src/core/scheduler.cpp",
          "src/core/logger.cpp",
          "-o",
          "csopesy.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
